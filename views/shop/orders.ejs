<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length > 0) { %>
                <ul class="cart__item-list">
                    <% orders.forEach(order => { %>
                        <li class="cart__item">
                            <h1><%= order.id %></h1>
                            <ul>
                                <%order.products.forEach(product => { %>
                                    <li>
                                        <%= product.title %>(<%= product.orderItem.quantity %>)
                                    </li>
                                <%});%>
                            </ul>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <h1>No Order!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>